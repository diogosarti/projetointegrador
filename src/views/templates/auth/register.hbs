            <label class="mt-2" for="emailong">Email: </label>
            <input
              class="border-2 py-2 border-blue-300 rounded-lg p-1"
              type="emailong"
              name="emailong"
              id="emailong"
              placeholder="email@email.com"
              required
            />
            <label class="mt-2" for="passwordong">Senha:</label>
            <input
              class="border-2 py-2 border-blue-300 rounded-lg p-1"
              type="passwordong"
              name="passwordong"
              id="passwordong"
              placeholder="************"
              required
            />
            <label class="mt-2" for="cnpj_ong">CNPJ:</label>
            <input
              class="border-2 py-2 border-blue-300 rounded-lg p-1"
              type="text"
              name="cnpj_ong"
              id="cnpj_ong"
              placeholder="123.456.789-90"
              required
            />
            <label class="mt-2" for="areadeatuacao">Área de Atuação:</label>
            <input
              class="border-2 py-2 border-blue-300 rounded-lg p-1"
              type="text"
              name="areadeatuacao"
              id="areadeatuacao"
              placeholder="123.456.789-90"
              required
            />
            <label class="mt-2" for="telefoneong">Telefone:</label>
            <input
              class="border-2 py-2 border-blue-300 rounded-lg p-1"
              type="text"
              name="telefoneong"
              id="telefoneong"
              placeholder="123.456.789-90"
              required
            />
            <button
              class="mt-6 rounded-md bg-[#1D3273] hover:bg-[#1D3273]/90 text-lg text-white py-2"
              type="submit"
            >Registrar</button>
          </form>
        </div>
      </div>
    </div>
    <p class="mt-2">
      Possui uma conta?
      <a href="/login" class="text-[#1D3273]">Entrar</a>
    </p>
  </div>
</section>

<script>
    const tabs = document.querySelectorAll('[data-tab-target]');
  const tabContents = document.querySelectorAll('.tab-content');
  const activeClasses = ['tabativa', 'bg-[#1D3273]', 'text-white', 'hover:text-gray-700'];

  // Select first tab by default
  tabs[0].classList.add(...activeClasses);
  tabContents[0].classList.remove('hidden');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const targetContent = document.querySelector(tab.dataset.tabTarget);

      // Hide all tab contents
      tabContents.forEach(content => content.classList.add('hidden'));
      // Show the target tab content
      targetContent.classList.remove('hidden');

      // Remove active classes from all tabs
      tabs.forEach(tab => tab.classList.remove(...activeClasses));
      // Add active classes to clicked tab
      tab.classList.add(...activeClasses);
    });
  });


  </script>