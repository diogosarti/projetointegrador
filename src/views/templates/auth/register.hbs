              required
            />
            <label class="mt-2" for="email">Email: </label>
            <input
              class="border-2 py-2 border-blue-300 rounded-lg p-1"
              type="email"
              name="email"
              id="email"
              placeholder="email@email.com"
              required
            />
            <label class="mt-2" for="password">Senha:</label>
            <input
              class="border-2 py-2 border-blue-300 rounded-lg p-1"
              type="password"
              name="password"
              id="password"
              placeholder="************"
              required
            />
            <button
              class="mt-6 rounded-md bg-[#1D3273] hover:bg-[#1D3273]/90 text-lg text-white py-2"
              type="submit"
            >Registrar</button>
          </form>
        </div>
        <div id="tab2" class="hidden tab-content text-gray-700">
          <form class="flex flex-col text-start">
            <label for="nomeong">Nome da ONG: </label>
            <input
              class="border-2 py-2 border-blue-300 rounded-lg p-1"
              type="nomeong"
              name="nomeong"
              id="nomeong"
              placeholder="Nome"
              required
